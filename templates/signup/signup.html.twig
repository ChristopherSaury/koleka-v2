{% extends 'base.html.twig' %}

{% block title %}Association culturelle Koleka - Inscription{% endblock %}
{% block stylesheets %} <link rel="stylesheet" href="{{asset('css/signup.css')}}"> {% endblock %}
{% block style %}
    <style>
        #signup{
            padding: 8% 0;
            width: 100%;
            height: 140vh;
            background: url('{{asset("img/fantasy-forest.jpg")}}')
            center center;
            background-size: cover;
            background-repeat: no-repeat;
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }
    </style>
{% endblock %}

{% block body %}
<section id="signup">
    <form action="{{path('inscription_handler')}}">
        <h2>Inscription</h2>
        <div class="first-row">
            <div class="lastname-input">
                <label for="lastname"></label>
                <input type="text" id="lastname" name="lastname" placeholder="Entrez votre Nom">
            </div>
            <div class="firstname-input">
                <label for="firstname"></label>
            <input type="text" id="firstname" name="firstname" placeholder="Entrez votre Prénom">
            </div>
        </div>
        <div class="identification">
            <label for="user_email"></label>
            <input type="email" id="user_email" name="user_email" placeholder="Entrez votre Email">
        </div>
        <div class="create-psw">
            <label for="password"></label>
            <input type="password" id="password" name="password" placeholder="Mot de Passe">
        </div>
        <div class="confirm-psw">
            <label for="cf-psw"></label>
            <input type="password" id="cf-psw" name="cf-psw" placeholder="Confirmer Mot de Passe">
        </div>
        <div class="rmb-me">
            <input type="checkbox" id="term_of_use" name="term_of_use">
            <p> J'accepte les conditions d'utilisation </p>
        </div>
        <div class="sp-btn-wrapper">
            <button type="submit">Terminer</button>
        </div>
        <p class="signup-link">
            Vous avez déja un compte ? <a href="{{path('app_login')}}">identifiez-vous</a> 
        </p>
    </form>
</section>
{% include './form/newsletter.html.twig' %}
{% endblock %}