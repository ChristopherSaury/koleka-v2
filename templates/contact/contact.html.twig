{% extends 'base.html.twig' %}

{% block title %}Association culturelle Koleka - Contact{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{asset('css/contact.css')}}">{% endblock %}

{% block javascripts %}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}

{% block body %}
<section id="contact">
    <div class="map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d20993.695647261728!2d2.2935887765048686!3d48.8732358244777!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66fc616046975%3A0x50b82c368941ac0!2sParis%208e%20Arrondissement%2C%2075008%20Paris!5e0!3m2!1sfr!2sfr!4v1650876711890!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
    <div class="form-section">
        <div class="info">
            <div class="org-info">
                <div>
                    <img class="info-icon" src="{{asset('img/clock.png')}}" alt="logo horloge">
                    <p>
                        <span class="info-name">Horaires</span>
                        <span class="info-txt"> Du Lundi au Vendredi 9h30 à 18h30</span>
                    </p>
                </div>
                <div>
                    <img class="info-icon" src="{{asset('img/location-pin.png')}}" alt="logo point de localisation">
                    <p>
                        <span class="info-name">Adresse</span>
                        <span class="info-txt"> 10 rue du Lorem Ipsum, Paris 75008</span>
                    </p>
                </div>
                <div>
                    <img class="info-icon" src="{{asset('img/at.png')}}" alt="logo arobase">
                    <p>
                        <span class="info-name">Email</span>
                        <span class="info-txt">Koleka-YourHistory@gmail.com</span>
                    </p>
                </div>
                <div class="ct-intro-txt">
                    <p>
                        Depuis des temps imémoriaux, les hommes ont laissé des traces de leurs passages
                        sur de divers manière. Que cela se fasse avec des monument,
                        des écrits ou des histoires orales. Ici nous vous invitons à faire de même et à
                        transcender les époques.
                    </p>
                </div>
            </div>

        </div>
        <form method="POST" action="{{path('envoyer_msg')}}" id="koleka-contact" class="info-ct">
            <h2>Contactez-nous</h2>
            {% for error in app.flashes('error') %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endfor %}
            {% for success in app.flashes('success') %}
                <div class="alert alert-success">{{ success }}</div>
            {% endfor %}
            <div class="line">
                <div class="lastname">
                    <label for="lastname">Nom</label>
                    <input type="text" name="lastname" id="lastname">
                </div>
                <div class="firstname">
                    <label for="firstname">Prénom</label>
                    <input type="text" name="firstname" id="firstname">
                </div>
            </div>
            <div class="mail">
                <label for="email_id">Email</label>
                <input type="email" name="email_id" id="email_id">
            </div>
            <div class="subject">
                <label for="subject">Sujet</label>
                <input type="text" name="subject" id="subject">
            </div>
            <div class="message">
                <label for="message">Message</label>
                <textarea name="message" id="message" cols="30" rows="10"></textarea>
            </div>
            <div class="g-recaptcha"data-sitekey="6LfB_oQiAAAAANoau9ii1eAkX8rrpHCSKCIbxXqE"></div>
            <div class="btn-wrapper">
                <button type="submit">Envoyer</button>
            </div>
        </form>
    </div>
</section>
<hr>
    {% include './form/newsletter.html.twig' %}
{% endblock %}

{% block js %} 
    <script>
        let userNavContact = document.querySelector("#desktop .user-nav");
        let contactPage = document.querySelector("#contact");

        if(userNavContact){
            contactPage.style.paddingTop = '110px';
        }else{
            contactPage.style.paddingTop = '80px';
        }
    </script> 
{% endblock %}