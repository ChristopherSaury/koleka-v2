{% extends 'base.html.twig' %}

{% block title %}Association culturelle Koleka - Inscription{% endblock %}
{% block meta %}
<meta name="robots" content="index,follow">
<meta name="description" content="Rejoignez-nous et venez partager votre culture en vous inscrivant sur le site de l'association culturelle Koleka">
{% endblock %}
{% block stylesheets %} <link rel="stylesheet" href="{{asset('css/signup.css')}}"> {% endblock %}
{% block style %}
    <style>
        #signup{
            padding-top: 80px ;
            width: 100%;
            min-height: 170vh;
            background: url('{{asset("img/fantasy-forest.jpg")}}')
            center center;
            background-size: cover;
            background-repeat: no-repeat;
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }
    @media screen and (min-width: 280px) and (max-width: 575px){
    #signup{
        min-height: 100vh;
        padding: 4% 0;
        justify-content: center;
        }
    }
    @media screen and (min-width: 576px) and (max-width: 992px){
        #signup{
        min-height: 100vh;
        padding: 4% 0;
        justify-content: center;
    }
    #signup form{
        margin-right: 0%;
        width: 80%;
        margin-top: 0%;
    }
    }
    </style>
{% endblock %}

{% block body %}
<section id="signup">
    <form action="{{path('register_handler')}}">
            {% for error in app.flashes('error') %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endfor %}
        <h2>Inscription</h2>
        <div class="first-row">
            <div class="lastname-input">
                <label for="lastname"></label>
                <input type="text" id="lastname" name="lastname" placeholder="Entrez votre Nom">
            </div>
            <div class="firstname-input">
                <label for="firstname"></label>
            <input type="text" id="firstname" name="firstname" placeholder="Entrez votre Prénom">
            </div>
        </div>
        <div class="identification">
            <label for="email"></label>
            <input type="email" id="email" name="email" placeholder="Entrez votre Email">
        </div>
        <div class="create-psw">
            <label for="plainPassword"></label>
            <input type="password" id="plainPassword" name="plainPassword" placeholder="Mot de Passe">
        </div>
        <div class="confirm-psw">
            <label for="cf-psw"></label>
            <input type="password" id="cf-psw" name="cf-psw" placeholder="Confirmer Mot de Passe">
        </div>
        <div class="rmb-me">
            <input type="checkbox" id="agreeTerms" name="agreeTerms">
            <label for="agreeTerms"> J'accepte les <a href="{{asset('CGU/CGU.pdf')}}" target="_blank">conditions d'utilisation</a> </label>
        </div>
        <div class="sp-btn-wrapper">
            <button type="submit">Terminer</button>
        </div>
        <p class="signup-link">
            Vous avez déja un compte ? <a href="{{path('app_login')}}">identifiez-vous</a> 
        </p>
    </form>
</section>
{% endblock %}

{% block js %} 
    <script>
        let userNavSu = document.querySelector("#desktop .user-nav");
        let signupPage = document.querySelector("#signup");
        
        if(userNavSu){
            signupPage.style.paddingTop = '120px';
        }else{
            signupPage.style.paddingTop = '80px';
        }
    </script> 
{% endblock %}