{% extends 'base.html.twig' %}

{% block title %}Association culturelle Koleka - Modifier utilisateur{% endblock %}

{% block style %}
    <style>
        #updateUser{
            width: 100%;
            min-height: 100vh;
        }
        #updateUser .container{
            width: 100%;
            height: 100%;
            margin-top: 110px;
            display: grid;
            justify-content: center;
        }
        #updateUser .container form{
            margin-top: 4%;
        }
    </style>
{% endblock %}

{% block body %}
<section id="updateUser">
    <div class="container">
        <h1 class="text-center mt-4">Modifier mes informations</h1>
        <div class="row">
            <div class="form-container">
            {% for success in app.flashes('success') %}
                <div class="alert alert-success">{{ success }}</div>
            {% endfor %}
                {{ form(updateUserForm) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}